<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <display-name>Flow reader reporting tool</display-name>

  <servlet>
    <servlet-name>UploadServlet</servlet-name>
    <servlet-class>com.veve.glyphreport.UploadServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DetailsServlet</servlet-name>
    <servlet-class>com.veve.glyphreport.DetailsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DatabaseServlet</servlet-name>
    <servlet-class>com.veve.glyphreport.DatabaseServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoaderServlet</servlet-name>
    <servlet-class>com.veve.glyphreport.LoaderServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ListServlet</servlet-name>
    <servlet-class>com.veve.glyphreport.ListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ImageServlet</servlet-name>
    <servlet-class>com.veve.glyphreport.ImageServlet</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>com.veve.glyphreport.DeleteServlet</servlet-class>
    </servlet>


  <servlet-mapping>
    <servlet-name>UploadServlet</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DetailsServlet</servlet-name>
    <url-pattern>/details</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DatabaseServlet</servlet-name>
    <url-pattern>/db</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoaderServlet</servlet-name>
    <url-pattern>/loader</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ListServlet</servlet-name>
    <url-pattern>/list</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ImageServlet</servlet-name>
    <url-pattern>/image</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

</web-app>
